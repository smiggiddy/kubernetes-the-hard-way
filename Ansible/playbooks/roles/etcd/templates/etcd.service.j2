[Unit]
Description=etcd
Documentation=https://github.com/coreos

[Service]
ExecStart=/usr/local/bin/etcd \
  --name {{ ansible_facts['nodename'] }} \
  --cert-file=/etc/etcd/etcd-server.crt \
  --key-file=/etc/etcd/etcd-server.key \
  --peer-cert-file=/etc/etcd/etcd-server.crt \
  --peer-key-file=/etc/etcd/etcd-server.key \
  --trusted-ca-file=/etc/etcd/ca.crt \
  --peer-trusted-ca-file=/etc/etcd/ca.crt \
  --peer-client-cert-auth \
  --client-cert-auth \
  --initial-advertise-peer-urls https://{{ ansible_facts['default_ipv4']['address'] }}:2380 \
  --listen-peer-urls https://{{ ansible_facts['default_ipv4']['address'] }}:2380 \
  --listen-client-urls https://{{ ansible_facts['default_ipv4']['address'] }}:2379,https://127.0.0.1:2379 \
  --advertise-client-urls https://{{ ansible_facts['default_ipv4']['address'] }}:2379 \
  --initial-cluster-token etcd-cluster-0 \
  --initial-cluster {{ hostvars['node1']['ansible_facts']['nodename'] }}=https://{{ hostvars['node1']['ansible_facts']['default_ipv4']['address'] }}:2380,{{ hostvars['node2']['ansible_facts']['nodename']  }}=https://{{ hostvars['node2']['ansible_facts']['default_ipv4']['address'] }}:2380 \
  --initial-cluster-state new \
  --data-dir=/var/lib/etcd
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
